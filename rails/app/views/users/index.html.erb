<div class="padding-bottom-large row">
  <div class="margin-right-medium pull-right">
    <%= link_to "New user", new_user_path, class: "btn btn-default" %>
  </div>
</div>
<table class="table table-striped table-bordered">
  <tr>
    <th>
      First Name
    </th>
    <th>
      Last Name
    </th>
    <th>
      Email
    </th>
    <th></th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td class="vertical-middle">
        <%= user.first_name %>
      </td>
      <td class="vertical-middle">
        <%= user.last_name %>
      </td>
      <td class="vertical-middle">
        <%= user.email %>
      </td>
      <td class="text-center">
        <%= link_to 'Show', user_path(user), class: "btn blue-aragonite-bkg white white-hover" %>
        <%= link_to 'Edit', edit_user_path(user), class: "btn emerland-bkg white white-hover" %>
        <%= link_to 'Songs', user_songs_path(user), class: "btn clay-bkg white white-hover" %>
      </td>
    </tr>
  <% end %>
</table>
